@using RecommendFood.Models.Entity;
@model List<RecommendFood.Models.Entity.News>;
@{
    ViewBag.Title = "Introduce";
}
<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <!-- ****** Welcome Post Area Start ****** -->
    <section class="welcome-post-sliders owl-carousel">
        @foreach(var item in Model)
        {
            <div class="welcome-single-slide">
                <!-- Post Thumb -->
                <img width="500" height="702" src=@item.Thumbnail alt="">
                <!-- Overlay Text -->
                <div class="project_title">
                    <div class="post-date-commnents d-flex">
                        <a href="#">@item.CreateAt.ToString("dddd, dd MMMM yyyy")</a>
                        @*<a href="#">5 Comment</a>*@
                    </div>
                    <a asp-action="Details" asp-route-id=@item.Id>
                        <h5>@item.Title</h5>
                    </a>
                </div>
            </div>
        }
    </section>
    <!-- ****** Welcome Area End ****** -->
    <!-- ****** Categories Area Start ****** -->
    <section class="categories_area clearfix" id="about">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="single_catagory wow fadeInUp" data-wow-delay=".3s">
                        <img src="/uploads/04/Anh1.jpg" alt="">
                        <div class="catagory-title">
                            <a asp-controller="Food" asp-action="Loc" asp-route-id="4">
                                <h5>Main Meal</h5>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="single_catagory wow fadeInUp" data-wow-delay=".6s">
                        <img src="/uploads/04/snack.jpg" alt="">
                        <div class="catagory-title">
                            <a asp-controller="Food" asp-action="Loc" asp-route-id="5">
                                <h5>Snacks</h5>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="single_catagory wow fadeInUp" data-wow-delay=".9s">
                        <img src="/uploads/04/smoothies.jpg" alt="">
                        <div class="catagory-title">
                            <a asp-controller="Food" asp-action="Loc" asp-route-id="6">
                                <h5>Smoothies</h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ****** Categories Area End ****** -->
    <!-- ****** Blog Area Start ****** -->
    <section class="blog_area section_padding_0_80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="row">

                        <!-- Single Post -->
                        <div class="col-12">
                            <div class="single-post wow fadeInUp" data-wow-delay=".2s">
                                <!-- Post Thumb -->
                                <div class="post-thumb">
                                    <img src=@Model.ElementAt(0).Thumbnail alt=@Model.ElementAt(0).Href_param>
                                </div>
                                <!-- Post Content -->
                                <div class="post-content">
                                    <div class="post-meta d-flex">
                                        <div class="post-author-date-area d-flex">
                                            <!-- Post Author -->
                                            <div class="post-author">
                                                <a href="#">By Linh</a>
                                            </div>
                                            <!-- Post Date -->
                                            <div class="post-date">
                                                <a href="#">@Model.ElementAt(0).CreateAt.ToString("dddd, dd MMMM yyyy")</a>
                                            </div>
                                        </div>
                                    </div>
                                    <a asp-action="Details" asp-route-id="@Model.ElementAt(0).Id">
                                        <h2 class="post-headline">@Model.ElementAt(0).Title</h2>
                                    </a>
                                    <p>@Model.ElementAt(0).ShortContent</p>
                                    <a asp-action="Details" asp-route-id="@Model.ElementAt(0).Id" class="read-more">Continue Reading..</a>
                                </div>
                            </div>
                        </div>

                        @{
                            var randomNews = (List<News>)ViewBag.newsRandom;
                        }
                        @foreach(var item in randomNews)
                        {
                            <!-- Single Post -->
                            <div class="col-12 col-md-6">
                                <div class="single-post wow fadeInUp" data-wow-delay=".4s">
                                    <!-- Post Thumb -->
                                    <div class="post-thumb">
                                        <img width="300" height="250" src=@item.Thumbnail alt="">
                                    </div>
                                    <!-- Post Content -->
                                    <div class="post-content">
                                        <div class="post-meta d-flex">
                                            <div class="post-author-date-area d-flex">
                                                <!-- Post Author -->
                                                <div class="post-author">
                                                    <a href="#">By Linh</a>
                                                </div>
                                                <!-- Post Date -->
                                                <div class="post-date">
                                                    <a href="#">@item.CreateAt.ToString("dddd, dd MMMM yyyy")</a>
                                                </div>
                                            </div>
                                        </div>
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            <h4 class="post-headline">@item.Title</h4>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- ******* List Blog Area Start ******* -->
                        @{
                            var randomNews1 = (List<News>)ViewBag.newsRandom1;
                        }
                        @foreach(var item in randomNews1)
                        {
                            <!-- Single Post -->
                            <div class="col-12">
                                <div class="list-blog single-post d-sm-flex wow fadeInUpBig" data-wow-delay=".2s">
