                                                    <a href="#">@item.CreateAt.ToString("dddd, dd MMMM yyyy")</a>
                                                </div>
                                            </div>
                                        </div>
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            <h4 class="post-headline">@item.Title</h4>
                                        </a>
                                        <p>@item.ShortContent</p>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="read-more">Continue Reading..</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- ****** Blog Sidebar ****** -->
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <div class="blog-sidebar mt-5 mt-lg-0">
                        <!-- Single Widget Area -->
                        <div class="single-widget-area about-me-widget text-center">
                            <div class="widget-title">
                                <h6>About Me</h6>
                            </div>
                            <div class="about-me-widget-thumb">
                                <img src="/Page/img/about-img/Linh.jpg" />
                            </div>
                            <h4 class="font-shadow-into-light">Linh</h4>
                            <p>Khi bạn không thể tìm thấy ánh nắng mặt trời, hãy là ánh nắng mặt trời.</p>
                        </div>

                        <!-- Single Widget Area -->
                        <div class="single-widget-area subscribe_widget text-center">
                            <div class="widget-title">
                                <h6>Subscribe &amp; Follow</h6>
                            </div>
                            <div class="subscribe-link">
                                <a href="https://www.facebook.com/profile.php?id=100004146017153"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                <a href="https://github.com/Linh78"><i class="fa fa-github" aria-hidden="true"></i></a>
                                <a href="https://join.skype.com/invite/r6Kj3g8zASYo"><i class="fa fa-skype" aria-hidden="true"></i></a>
                                <a href="https://www.instagram.com/thuy_linh_25_8/"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            </div>
                        </div>

                        <!-- Single Widget Area -->
                        <div class="single-widget-area popular-post-widget">
                            <div class="widget-title text-center">
                                <h6>Populer Post</h6>
                            </div>
                            @{int i = 0;}
                            @foreach (var item in Model)
                            {
                                <!-- Single Popular Post -->
                                <div class="single-populer-post d-flex">
                                    <img src=@item.Thumbnail alt=@item.Href_param>
                                    <div class="post-content">
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            <h6>@item.Title</h6>
                                        </a>
                                        <p>@item.CreateAt.ToString("dddd, dd MMMM yyyy")</p>
                                    </div>
                                </div>
                                i++;
                                if (i > 6)
                                {
                                    break;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
