    <section class="food_section">
        <div class="container">
            <ul class="filters_menu">
                <li class=""><a asp-action="Loc" asp-route-id="null">Tất cả</a></li>
                <li><a asp-action="Loc" asp-route-id="4">Món chính</a></li>
                <li><a asp-action="Loc" asp-route-id="5">Món phụ</a></li>
                <li><a asp-action="Loc" asp-route-id="6">Smoothies</a></li>
            </ul>

            <div class="filters-content">
                <div class="row grid">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-lg-4 all burger">
                            <div class="box">
                                <div>
                                    <div class="img-box">
                                        <img src=@item.Thumbnail alt="">
                                    </div>
                                    <div class="detail-box">
                                        <h5 style="color: white">
                                            @item.Name
                                        </h5>
                                        <div style="color: wheat; font-size:0.8em; opacity: 0.7" class="opt">
                                            <div> Định lượng: @item.Quantity @item.Unit</div>
                                            <div> Nhóm tuổi: @item.BabyAge.ToString()</div>
                                            <div>@item.Category</div>
                                        </div>
                                        <div class="options">
                                            <h6 style="color:white">
                                                @item.Energy Kcal
                                            </h6>
                                            <a asp-action="Detail" asp-route-id="@item.Id" style="font-size: 0.8em; color: white">
                                                Tiếp
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @*<div class="btn-box">
                <a href="">
                    View More
                </a>
            </div>*@
        </div>
    </section>

    <!-- end food section -->
    <!-- footer section -->
